---
import CountdownTimer from "./CountdownTimer";
import Videoplayer from "./Videoplayer.astro";
import CTAReplay from "./CTAReplay";

const { titulo, source, clase } = Astro.props;

const fifteen = 15 * 60 * 1000;
const timenow = new Date().getTime();
const targetDate = timenow + fifteen;
---

<div class="bg-primary text-xl md:text-3xl">
  <h1 class="text-white text-center p-3 md:p-8 font-semibold lg:w-2/4 mx-auto">
    Reproduce la clase y confirma tu asistencia antes de que desaparezca
  </h1>
</div>

<div class="mt-4 md:mt-12 pb-4">
  <h1 class="text-3xl text-primary text-center md:text-7xl font-semibold">
    Clase #{clase}
  </h1>
  <p class="text-center text-xl md:text-3xl md:my-8 my-3 mx-4">
    {titulo}
  </p>
  <div class="w-auto md:mx-24 mx-8">
    <Videoplayer source={source} />
  </div>

  <CTAReplay client:load />

  <div class="flex items-center flex-col md:gap-8 mt-8">
    <h2
      class="mt-2 md:mt-4 text-center uppercase text-2xl md:text-4xl font-semibold block mx-8"
    >
      Esta clase desaparecer√° en:
    </h2>
    <CountdownTimer targetDate={targetDate} client:load color="black" />
  </div>
</div>
