---
import CountdownTimer from "./CountdownTimer";

const { bgcolor, date } = Astro.props;

const eventdate = new Date("October 17 2022 16:30");
---

<header>
  <div class={`grid gap-2 md:grid-cols-3  ${bgcolor}`}>
    <div class="flex justify-center">
      <div class="w-48 px-6 pb-6 bg-white rounded-b-lg shadow-xl lg:w-64 h-3/4">
        <div>
          <img
            src="Incrementa_lateral.png"
            alt="Logo Incrementatuconsulta"
            width="256"
            height="100"
            loading="lazy"
          />
        </div>
      </div>
    </div>
    <div class="flex items-center justify-center gap-4">
      <p class="text-sm font-bold text-right text-white lg:text-md">
        La clase <br />
        comienza en:
      </p>
      <CountdownTimer
        targetDate={eventdate}
        client:only="react"
        textColor="white"
      />
    </div>
    <div>
      <div class="flex justify-center">
        <div class="hidden w-48 p-4 lg:p-8 lg:w-64 bg-primary md:block">
          <p class="text-sm font-bold lg:text-md text-white">Taller Gratuito</p>
          <p class="text-sm text-white lg:text-base">
            Consigue pacientes en redes sociales
          </p>
        </div>
      </div>
    </div>
  </div>
</header>
