---
const { sesiones } = Astro.props;
import "@splidejs/splide/css";

type Items = {
  id: number;
  img: any | string;
  alt: string;
  href: string;
};

const items = [
  {
    id: 1,
    img: "/Miniaturas_640px-01_320x201.webp",
    alt: "foto sesion 1",
    href: "/plc1",
  },
  {
    id: 2,
    img: "/Miniaturas_640px-02_320x201.webp",
    alt: "foto sesion 2",
    href: "/plc2",
  },
  {
    id: 3,
    img: "/Miniaturas_640px-03_320x201.webp",
    alt: "foto sesion 3",
    href: "/plc3",
  },
  {
    id: 4,
    img: "/Miniaturas_640px-04_320x201.webp",
    alt: "foto sesion 4",
    href: "/plc4",
  },
];

const clases = sesiones.map((s: number) =>
  items.find((i: Items) => i.id === s)
);
---

<script>
  import Splide from "@splidejs/splide";

  const splide = new Splide(".splide", {
    type: "loop",
    perPage: 2,
    pauseOnHover: true,
    breakpoints: {
      820: {
        perPage: 1,
      },
    },
  }).mount();
</script>

<section class="flex">
  <div class="splide" role="group" aria-label="carousel">
    <div class="splide__track">
      <ul class="splide__list">
        {
          clases.map((clase: Items) => (
            <li class="splide__slide">
              <a href={clase.href}>
                <img
                  src={clase.img}
                  alt={clase.alt}
                  width={320}
                  height={201}
                  class="mx-auto"
                />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
