---
import Videoplayer from "../VideoPlayer.astro";

const { titulo, videoId, clase } = Astro.props;
---

<div>
  <div class="flex flex-col gap-2 md:gap-6">
    <h1
      class="self-center text-2xl font-semibold text-center text-secondary md:w-3/4"
    >
      {titulo}
    </h1>
    <div class="flex justify-center">
      <Videoplayer source={videoId} />
    </div>

    <p class="self-center font-semibold">
      <span class="font-bold text-secondary">CLASE:</span>
      {clase} DE 4
    </p>
  </div>
</div>
