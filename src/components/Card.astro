---
import Hearth from "./Hearth.astro";
import Stars from "./Stars.astro";

const { nombre, img, contenido, titulo } = Astro.props;
---

<div
  class="rounded-xl shadow-xl border-2 border-slate-100 p-6 min-h-72 bg-slate-100 flex flex-col justify-around my-4 md:w-[300px] flex-wrap"
>
  <div class="">
    <div class="flex gap-2 items-center">
      <img src={img} alt={nombre} loading="lazy" width="110" />
      <div>
        <p class="text-xl md:text-xl">{titulo}</p>
        <p class="text-xl md:text-xl">{nombre}</p>
      </div>
    </div>

    <div class="flex gap-2 my-2">
      <Stars />
      <Stars />
      <Stars />
      <Stars />
      <Stars />
    </div>

    <p class="">
      {contenido}
    </p>
  </div>

  <div class="flex justify-end">
    <Hearth />
  </div>
</div>
