---
import { entrenamiento } from "../data/entrenamientoData";
---

<section class="bg-white">
    <div class="bg-primary py-8">
        <h1 class="text-2xl md:text-4xl text-center text-white">
            ¿Qué aprenderás en este entrenamiento?
        </h1>
    </div>
    <ul class="grid md:grid-cols-4 gap-4 py-8">
        {
            entrenamiento.map((e) => (
                <div class="">
                    <img
                        src="./anfritrion_small.webp"
                        alt="anfritrion"
                        class="rounded-full mx-auto mb-8"
                    />
                    <p class="px-4 md:px-12 text-lg md:text-2xl text-center">
                        {e.contents}
                    </p>
                </div>
            ))
        }
    </ul>
</section>
