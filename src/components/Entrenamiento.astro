---
import { entrenamiento } from "../data/entrenamientoData";
const date = Date.now();
import "animate.css";
---

<style>
  .animate {
    opacity: 0;
  }

  .show {
    opacity: 1;
  }
  .logo {
    background-color: transparent;
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add(
          "animate__animated",
          "animate__flipInY",
          "show"
        );
      }
    });
  });

  const hiddenElements = document.querySelectorAll(".animate");

  hiddenElements.forEach((el) => {
    return observer.observe(el);
  });
</script>

<section class="bg-transparent py-8">
  <h1 class="mb-4 pt-8 text-center text-2xl font-bold md:text-4xl">
    ¿Qué aprenderás en este entrenamiento?
  </h1>

  <div
    class="container mx-auto grid justify-items-center gap-2 md:gap-8 md:px-24"
  >
    {
      entrenamiento.map((et) => {
        return et.id % 2 ? (
          <div class="grid items-center justify-items-center gap-4 md:grid-cols-2 md:gap-8 lg:mx-0 lg:grid-cols-2">
            <img src={et.img} alt={et.alt} width={458} class="animate px-2" />
            <div class="mx-4">
              <h2 class="font-coolvetica text-3xl text-blue">{et.title}</h2>
              <div class="my-4 h-[2px] w-full bg-black" />
              <p class="font-inter text-slate-500 md:w-96 md:text-black/60">
                {et.contents}
              </p>
            </div>
          </div>
        ) : (
          <div class="grid items-center gap-4 md:mx-12 md:grid-cols-2 md:gap-8 lg:mx-0 lg:grid-cols-2 lg:gap-24">
            <div class="mx-4">
              <h2 class="font-coolvetica text-3xl text-blue">{et.title}</h2>
              <div class="my-4 h-[2px] w-full bg-black" />
              <p class="font-inter text-slate-500 md:w-96 md:text-xl">
                {et.contents}
              </p>
            </div>
            <img
              src={et.img}
              alt={et.alt}
              width={458}
              class="animate order-first mt-4 place-self-center px-2 md:order-last md:mt-0"
            />
          </div>
        );
      })
    }
  </div>
</section>
