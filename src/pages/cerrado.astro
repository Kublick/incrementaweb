import ReplayFormulario from '../components/ReplayFormulario';
import Videoplayer from '../components/Videoplayer.astro';
import Layout from '../layouts/Layout.astro';

const videos = [
	'BZCgpqnTqZw',
	'eGORT3A48l0',
	'c1XGvy-ynZs',
	'NmL3jxP9BB0',
	'4G_j_Qk7Gvc',
	'wXHrOaaJZoM',
	'E_Vtjlfbke4',
	'TFc8I4yWV6o',
	'CQgBjXeLclM',
	'QT1GhuH5WBI',
	'_dj_e5Y2XEc',
	'PtyxK0vTrPs',
	'COftyA8rQUA',
