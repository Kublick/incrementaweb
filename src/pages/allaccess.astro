      <a href="/inscripciones-abiertas">
        <img
          src="/clase4_min.webp"
          alt="clase 4"
          height="315"
          width="760"
          class="rounded-md"
        />
      </a>
    </div> -->
  </section>
  <Footer />
</Layout>
