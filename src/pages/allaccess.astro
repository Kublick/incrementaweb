---
import Footer from "../components/Footer.astro";
import { ChinneseCountDown } from "../components/counter/countdown";
import Replay from "../components/player/Replay.astro";
import Layout from "../layouts/Layout.astro";
import { allAccessEndDate } from "../utils/constants";

const plc1 = "FgqiCiMOx7A";
const plc2 = "PRj9z8WtqSw";
const plc3 = "nYfE61t07xM";
// const plc4 = "JCoLxVvFuiY";
---

<script>
  window.onload = function () {
    window.location.replace("https://www.incrementatuconsulta.com/");
  };
</script>

<script>
  // import { getLead } from "../hooks/getLead";
  import JSConfetti from "js-confetti";

  const whatsappUrl =
    "https://www.incrementatuconsulta.com/inscripciones-abiertas";
  const jsConfetti = new JSConfetti();

  document.querySelectorAll("#botonazo").forEach((e) => {
    e.addEventListener("click", () => {
      jsConfetti.addConfetti();

      setTimeout(() => {
        window.window.location.replace(whatsappUrl);
      }, 1200);
    });
  });
</script>
<Layout title="All Access - Incrementa tu consulta">
  <section class="">
    <h1
      class="mb-4 bg-ventaBlue px-4 py-6 text-center font-coolvetica text-xl font-bold text-white md:mb-12 md:text-5xl"
    >
      Mira todas las clases antes de que se detenga el reloj:
    </h1>
    <div class="flex justify-center">
      <ChinneseCountDown client:load date={allAccessEndDate} color={false} />
    </div>

    <div
      class="mx-4 mt-4 text-center font-inter text-xl font-bold text-secondary md:mt-8 md:text-6xl"
    >
      <h2>Llena tu agenda de pacientes en 60 dias o menos</h2>
      <h2>multiplica tus ingresos</h2>
    </div>

    <Replay
      clase="1"
      titulo="Como ofrecer o vender tu consulta privada"
      source={plc1}
    />
    <div class="my-4 flex justify-center">
      <button
        class="mx-4 flex animate-none items-center gap-4 rounded-full bg-primary px-8 py-4 text-center font-bold text-white shadow-lg hover:bg-green-600 md:text-2xl"
        id="botonazo"
      >
        ยก Quiero incrementar mi consulta !
      </button>
    </div>

    <Replay
      clase="2"
      titulo="Las top 7 formas de tener dinero online y los 5 errores de novato"
      source={plc2}
    />
    <div class="my-4 flex justify-center">
      <button
        class="mx-4 flex animate-none items-center gap-4 rounded-full bg-primary px-8 py-4 text-center font-bold text-white shadow-lg hover:bg-green-600 md:text-2xl"
        id="botonazo"
      >
        ยก Quiero incrementar mi consulta !
      </button>
    </div>

    <Replay
      clase="3"
      titulo="Como ofrecer o vender tu consulta online"
      source={plc3}
    />
    <div class="my-4 flex justify-center">
      <button
        class="mx-4 flex animate-none items-center gap-4 rounded-full bg-primary px-8 py-4 text-center font-bold text-white shadow-lg hover:bg-green-600 md:text-2xl"
        id="botonazo"
      >
        ยก Quiero incrementar mi consulta !
      </button>
    </div>
    <!-- ยก Quiero incrementar mi consulta ! -->
