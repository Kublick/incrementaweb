---
import { Image } from '@astrojs/image/components';
import AstroTimer from '../components/AstroTimer.astro';
import VentaPuntos from '../components/venta/VentaPuntos.astro';
import Layout from '../layouts/Layout.astro';
import Centro from '../../public/centro.png';
import Programa from '../components/venta/Programa.astro';
import Bonos from '../components/venta/Bonos..astro';
---

<script
	type="module"
	async
	src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1.4.0/lite-youtube.js"
></script>

<Layout title="Pagina de Venta | Incrementa tu consulta">
	<div class="bg-mango md:h-[424px] h-[380px]">
		<img src="/whiteLogo.svg" alt="whiteLogo" class="mx-auto py-2" />
		<div class="mx-2">
			<h1
				class="font-coolvetica text-ventaBlue text-4xl md:text-5xl text-center"
			>
				Llena tu agenda de pacientes
			</h1>
			<h1
				class="font-coolvetica text-ventaBlue text-4xl md:text-5xl text-center"
			>
				En menos de 60 días
			</h1>

			<h2 class="font-coolvetica text-white md:text-2xl text-center mt-2">
				Y multiplica tus ingresos
			</h2>
		</div>
	</div>

	<div class="relative">
		<div
			class="md:w-[650px] w-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
		>
			<lite-youtube videoid={'BZCgpqnTqZw'} class="rounded-lg shadow-lg" />
		</div>
	</div>

	<div class="mx-2">
		<h2
			class="font-inter font-bold text-center text-2xl text-primary md:mt-56 mt-36"
		>
			Sólo 20 cupos disponibles para los bonos de acción rápida
		</h2>
		<div class="flex items-center flex-col mt-4 md:gap-10 gap-4">
			<button
				class="bg-redVenta font-coolvetica md:text-3xl text-xl text-white text-center rounded-2xl shadow-[10px_10px_2px_0px_rgba(0,0,0,0.07)] px-24 py-3 hover:bg-red-700"
			>
				QUIERO MI CUPO YA
			</button>

			<button
				class="bg-whats font-coolvetica md:text-lg text-base text-white text-center rounded-2xl shadow-[10px_10px_2px_0px_rgba(0,0,0,0.07)] px-24 py-3 flex gap-4 items-center hover:bg-green-500"
			>
				<img src="/whatsapp-logo.webp" alt="logo whatsapp" class="h-8 w-8" />
				¿Necesitas ayuda?
			</button>
		</div>
		<h2 class="font-inter text-2xl text-center mt-4 md:mt-8">
			Los bonos de acción rápida desaparecerán en:
		</h2>
		<div class="flex justify-center">
			<AstroTimer eventDate={'October 21 2022 00:00'} />
		</div>
	</div>

	<VentaPuntos />
	<Programa />
	<Bonos />
</Layout>
