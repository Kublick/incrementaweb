---
import PlcHeader from '../components/PlcHeader.astro';
import Layout from '../layouts/Layout.astro';
import Plc1Sidebar from '../components/plc/Plc1Sidebar.astro';
import PlcVideoPlayer from '../components/plc/PlcVideoPlayer.astro';
import CommentsFacebook from '../components/CommentsFacebook.astro';
import PlcTestimonios from '../components/plc/PlcTestimonios.astro';
import PlcRight from '../components/plc/PlcRight.astro';

const domain = 'www.incrementatuconsulta.com';
const videoId = 'Qf1XHli2ukE';
---

<script>
	window.onload = function () {
		window.location.replace('https://www.incrementatuconsulta.com/cerrado');
	};
</script>

<Layout title="Clase 1 | Incrementa tu Consulta">
	<div class="hidden">
		<PlcHeader bgcolor="bg-mango" date="2022-10-17T17:30:00-07:00" />
		<div class="grid sm:grid-cols-2 md:grid-cols-4">
			<div class="order-4 md:-order-1 md:">
				<Plc1Sidebar />
			</div>
			<div class="grid-cols-2 md:col-span-3">
				<div class="grid lg:grid-cols-3">
					<div class="lg:col-span-2">
						<PlcVideoPlayer
							titulo="Tu oportunidad de tener pacientes desde las redes sociales"
							videoId={videoId}
							clase="1"
						/>
					</div>
					<div class="place-self-center">
						<iframe
							width="400"
							height="500"
							src={`https://www.youtube.com/live_chat?v=${videoId}&embed_domain=${domain}`}
						></iframe>
					</div>
				</div>
				<div class="my-4">
					<PlcRight sesiones={[2, 3, 4]} />
				</div>
			</div>
			<div class="md:col-span-3">
				<CommentsFacebook />
			</div>
			<div class="">
				<PlcTestimonios />
			</div>
		</div>
	</div>
</Layout>
