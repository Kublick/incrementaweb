---
import PlcHeader from "../components/PlcHeader.astro";
import Layout from "../layouts/Layout.astro";
import Plc1Sidebar from "../components/plc/Plc1Sidebar.astro";
import PlcVideoPlayer from "../components/plc/PlcVideoPlayer.astro";
import Plc1Right from "../components/plc/Plc1Right.astro";
import CommentsFacebook from "../components/CommentsFacebook.astro";
import PlcTestimonios from "../components/plc/PlcTestimonios.astro";
---

<Layout title="Clase 1 | Incrementa tu Consulta">
  <PlcHeader bgcolor="bg-mango" />
  <main>
    <div class="grid lg:grid-cols-4">
      <Plc1Sidebar />
      <div
        class="order-first py-8 bg-gray-100 shadow-lg lg:order-none lg:col-span-2"
      >
        <PlcVideoPlayer
          titulo="Como ofrecer o vender tu consulta online"
          videoId="https://youtu.be/QtKCnfgs48k"
          clase="1"
        />
      </div>
      <div>
        <Plc1Right />
      </div>
    </div>
    <div class="grid gap-6 pt-8 mx-2 bg-gray-50 md:grid-cols-2">
      <CommentsFacebook />
      <PlcTestimonios />
    </div>
  </main>
</Layout>
